<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_icon_item_list_child"
        android:layout_width="@dimen/item_child_image_size"
        android:layout_height="@dimen/item_child_image_size"
        android:layout_margin="@dimen/image_margin"
        tools:src="@drawable/ic_face_black_male_24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_name_item_list_child"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ellipsize="start"
                android:maxLines="1"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_main"
                tools:text="Misaki Mei" />

            <TextView
                android:id="@+id/txt_dob_item_list_child"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="@color/text_color_extra"
                android:textSize="@dimen/text_size_extra"
                tools:text="20/11/2016" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_next_inject_item_list_child"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:textSize="12sp"
            tools:text="Ngay tiem tiep theo: 20/04/2017" />

    </LinearLayout>
</LinearLayout>