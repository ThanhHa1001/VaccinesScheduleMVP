<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="8dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/item_card_view_padding">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_icon_item_detail_inj_schedule_child"
            android:layout_width="42dp"
            android:layout_height="42dp"
            tools:src="@drawable/bachhau_uonvan_hoga_hienlanh"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginRight="4dp">

            <TextView
                android:id="@+id/txt_title_item_detail_inj_schedule_child"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="@string/vaccine_tiem_nhac_bachau_hoga_uonvan"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_main" />

            <TextView
                android:id="@+id/txt_shot_number_item_detail_inj_schedule_child"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Mũi tiêm số 1"
                android:textColor="@color/text_color_extra"
                android:textSize="@dimen/text_size_extra" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_day_injection_item_detail_inj_schedule_child"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                tools:text="22/04/2017"
                android:textColor="@color/text_color_extra"
                android:textSize="@dimen/text_size_extra" />

            <TextView
                android:id="@+id/txt_is_inject_item_detail_inj_schedule_child"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                tools:text="@string/is_inject_done"
                android:textColor="@color/text_color_extra"
                android:textSize="@dimen/text_size_extra" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
